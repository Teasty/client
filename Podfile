# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

def shared_pods
    
    pod 'Alamofire', '4.7.3'                        # network
    pod 'Socket.IO-Client-Swift', '~> 15.2.0'          # socket
    pod 'SwiftyJSON'                                # json
    pod 'SwiftLint'                                 # code style
    pod 'R.swift'                                   # autocomplite
    pod 'SwiftyBeaver', '1.6.0'                     # logger
    pod 'SnapKit', '4.0.0'                          # autolayout
    pod 'SideMenu'                                  # sidemenu
    pod 'SwiftHEXColors', '1.1.2'                   # hex color
    pod 'JVFloatLabeledTextField', '1.2.1'          # material design inputs
    pod 'PromiseKit'                                # promise
    pod 'Kingfisher', '5.2.0'                       # image cache
    pod 'SwiftyGif', '4.1.0'                        # gifimage
    pod 'JVFloatLabeledTextField', '1.2.1'          # material design inputs
    pod 'ActiveLabel', '0.9.0'                      # link in label
    
    pod 'GoogleMaps'                                # google maps
    pod 'GooglePlaces'				    # google places
    pod 'Firebase/Crashlytics'
    pod 'Firebase/Core'				    # firebase core
    pod 'Firebase/Messaging'			    # firebase messaging for notifications
    
    pod 'RealmSwift'
    
    pod 'RxSwift', '4.4.2'
    pod 'RxCocoa', '4.4.2'
    pod 'RxRealm', '0.7.6'
    
end

target 'Template.ageone' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    
    # Pods for Invitro
    shared_pods
    
end
